{% extends '::base.html.twig' %}

{% block title %}{{ "Home"|trans }}{% endblock %}

{% block body -%}
    <div class="row">
        <div class="large-12 columns">
            <h1>{{ "Home"|trans }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="large-6 columns">

            <h3>{{ "Collaborator in issues"|trans({}, "issue") }}</h3>
            {{ render(path('issue_embedded', {'collaborator_id': app.user.id})) }}
        </div>
        <div class="large-6 columns">
            {{ render(path('activity', {'member_id': app.user.id, 'only_opened': true, 'limit': 10})) }}
        </div>
    </div>

{% endblock %}
