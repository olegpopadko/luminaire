{% extends '::base.html.twig' %}

{% block title %}{{ "Issue list"|trans({}, "issue") }}{% endblock %}

{% block body -%}
    <h1>{{ "Issue list"|trans({}, "issue") }}</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>{{ "Code"|trans }}</th>
            <th>{{ "Summary"|trans }}</th>
            <th>{{ "Created at"|trans }}</th>
            <th>{{ "Actions"|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('issue_show', { 'id': entity.id }) }}">{{ entity.humanCode }}</a>
                </td>
                <td>{{ entity.summary }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <a href="{{ path('issue_edit', { 'id': entity.id }) }}" class="button">{{ "Edit"|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('issue_new') }}" class="button">
        {{ "Create a new issue"|trans({}, "issue") }}
    </a>
{% endblock %}
